<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Quiz with Scoring</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            color: #333;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
        }
        .container {
            max-width: 600px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .question {
            margin-bottom: 20px;
        }
        .options {
            list-style: none;
            padding: 0;
        }
        .options li {
            margin-bottom: 10px;
        }
        .timer {
            font-size: 1.5rem;
            color: #ff0000;
        }
        .submit-btn {
            background-color: #28a745;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
        }
        .submit-btn:disabled {
            background-color: #aaa;
        }
        .results {
            display: none;
            margin-top: 20px;
        }
        .results p {
            font-size: 1.2rem;
        }
        .feedback {
            margin-top: 10px;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Interactive Quiz with Scoring</h1>
        <div id="quiz"></div>
        <p class="timer">Time left: <span id="time">60</span> seconds</p>
        <button class="submit-btn" id="submit-btn" onclick="submitQuiz()">Submit Answer</button>
        <div class="feedback" id="feedback"></div>
        <div class="results" id="results">
            <h2>Quiz Results</h2>
            <p id="score"></p>
        </div>
    </div>

    <script>
        const questions = [
            { question: 'Who was the first person to walk on the moon?', options: ['Buzz Aldrin', 'Yuri Gagarin', 'Neil Armstrong', 'Michael Collins'], answer: 2 },
            { question: 'What is the capital of Japan?', options: ['Kyoto', 'Osaka', 'Tokyo', 'Hiroshima'], answer: 2 },
            { question: 'Which planet is known as the Red Planet?', options: ['Earth', 'Mars', 'Jupiter', 'Venus'], answer: 1 },
            { question: 'Who wrote the play "Romeo and Juliet"?', options: ['Charles Dickens', 'William Shakespeare', 'Mark Twain', 'J.K. Rowling'], answer: 1 },
            { question: 'In which year did the Titanic sink?', options: ['1912', '1914', '1908', '1920'], answer: 0 },
            { question: 'What is the chemical symbol for water?', options: ['O2', 'CO2', 'H2O', 'NaCl'], answer: 2 },
            { question: 'Who painted the Mona Lisa?', options: ['Pablo Picasso', 'Vincent van Gogh', 'Leonardo da Vinci', 'Claude Monet'], answer: 2 },
            { question: 'What is the hardest natural substance on Earth?', options: ['Gold', 'Diamond', 'Iron', 'Platinum'], answer: 1 },
            { question: 'Which country is the largest by area?', options: ['United States', 'Canada', 'China', 'Russia'], answer: 3 },
            { question: 'What is the largest ocean on Earth?', options: ['Atlantic Ocean', 'Indian Ocean', 'Arctic Ocean', 'Pacific Ocean'], answer: 3 },
            { question: 'What is the tallest mountain in the world?', options: ['K2', 'Mount Kilimanjaro', 'Mount Everest', 'Denali'], answer: 2 },
            { question: 'Which country hosted the 2016 Summer Olympics?', options: ['Japan', 'Brazil', 'China', 'Russia'], answer: 1 },
            { question: 'How many continents are there on Earth?', options: ['5', '6', '7', '8'], answer: 2 },
            { question: 'What is the smallest country in the world by land area?', options: ['Monaco', 'Vatican City', 'San Marino', 'Liechtenstein'], answer: 1 },
            { question: 'Who developed the theory of relativity?', options: ['Isaac Newton', 'Galileo Galilei', 'Albert Einstein', 'Stephen Hawking'], answer: 2 },
            { question: 'Which element has the chemical symbol ‘O’?', options: ['Gold', 'Oxygen', 'Osmium', 'Ozone'], answer: 1 },
            { question: 'What is the capital city of Australia?', options: ['Sydney', 'Melbourne', 'Canberra', 'Brisbane'], answer: 2 },
            { question: 'Who invented the telephone?', options: ['Alexander Graham Bell', 'Thomas Edison', 'Nikola Tesla', 'Samuel Morse'], answer: 0 },
            { question: 'How many bones are there in the adult human body?', options: ['196', '206', '216', '226'], answer: 1 },
            { question: 'Which planet is the hottest in the solar system?', options: ['Mercury', 'Venus', 'Mars', 'Jupiter'], answer: 1 },
            { question: 'What is the largest mammal in the world?', options: ['African Elephant', 'Blue Whale', 'Giraffe', 'Polar Bear'], answer: 1 },
            { question: 'Which country is famous for inventing pizza?', options: ['Greece', 'Spain', 'Italy', 'France'], answer: 2 },
            { question: 'What year did World War II end?', options: ['1940', '1945', '1939', '1941'], answer: 1 },
            { question: 'What is the capital of Canada?', options: ['Toronto', 'Ottawa', 'Vancouver', 'Montreal'], answer: 1 },
            { question: 'Who discovered penicillin?', options: ['Marie Curie', 'Alexander Fleming', 'Louis Pasteur', 'Gregor Mendel'], answer: 1 },
            { question: 'How many players are on a soccer team on the field?', options: ['9', '10', '11', '12'], answer: 2 },
            { question: 'What is the smallest planet in our solar system?', options: ['Earth', 'Mars', 'Mercury', 'Pluto'], answer: 2 },
            { question: 'Who was the first female Prime Minister of the UK?', options: ['Margaret Thatcher', 'Theresa May', 'Elizabeth II', 'Angela Merkel'], answer: 0 },
            { question: 'What is the longest river in the world?', options: ['Amazon River', 'Yangtze River', 'Mississippi River', 'Nile River'], answer: 3 },
            { question: 'Which artist is known for painting "Starry Night"?', options: ['Vincent van Gogh', 'Pablo Picasso', 'Claude Monet', 'Salvador Dalí'], answer: 0 },
        ];

        let currentQuestion = 0;
        let score = 0;
        let timer;
        let timeLeft = 60;

        const quizContainer = document.getElementById('quiz');
        const timeDisplay = document.getElementById('time');
        const feedbackContainer = document.getElementById('feedback');
        const resultsContainer = document.getElementById('results');
        const scoreDisplay = document.getElementById('score');
        const submitBtn = document.getElementById('submit-btn');

        function loadQuestion() {
            // Clear feedback and reset the submit button
            feedbackContainer.textContent = '';
            submitBtn.disabled = false;

            // Clear existing content
            quizContainer.innerHTML = '';

            if (currentQuestion < questions.length) {
                const questionData = questions[currentQuestion];

                // Display question
                const questionElement = document.createElement('div');
                questionElement.classList.add('question');
                questionElement.textContent = (currentQuestion + 1) + '. ' + questionData.question;
                quizContainer.appendChild(questionElement);

                // Display options
                const optionsElement = document.createElement('ul');
                optionsElement.classList.add('options');
                questionData.options.forEach((option, index) => {
                    const optionItem = document.createElement('li');
                    optionItem.innerHTML = `<input type="radio" name="question${currentQuestion}" value="${index}"> ${option}`;
                    optionsElement.appendChild(optionItem);
                });
                quizContainer.appendChild(optionsElement);

                // Reset and start timer
                timeLeft = 60;
                timeDisplay.textContent = timeLeft;
                clearInterval(timer);
                timer = setInterval(updateTimer, 1000);
            } else {
                endQuiz();
            }
                  
        }

        function updateTimer() {
            timeLeft--;
            timeDisplay.textContent = timeLeft;
            if (timeLeft === 0) {
                submitQuiz();
            }
        }

        function submitQuiz() {
            clearInterval(timer);
            submitBtn.disabled = true;

            const selectedOption = document.querySelector(`input[name="question${currentQuestion}"]:checked`);
            if (selectedOption) {
                const selectedValue = parseInt(selectedOption.value);
                if (selectedValue === questions[currentQuestion].answer) {
                    score++;
                    feedbackContainer.textContent = 'Correct!';
                    feedbackContainer.style.color = 'green';
                } else {
                    feedbackContainer.textContent = `Incorrect! The correct answer is ${questions[currentQuestion].options[questions[currentQuestion].answer]}.`;
                    feedbackContainer.style.color = 'red';
                }
            } else {
                feedbackContainer.textContent = 'No answer selected!';
                feedbackContainer.style.color = 'orange';
            }

            currentQuestion++;
            setTimeout(loadQuestion, 2000); // Load next question after a 2-second delay
        }

        function endQuiz() {
            quizContainer.style.display = 'none';
            submitBtn.style.display = 'none';
            resultsContainer.style.display = 'block';
            scoreDisplay.textContent = `You scored ${score} out of ${questions.length}.`;
        }

        // Load the first question
        loadQuestion();
    </script>
</body>
</html>
